name: customer CI

on:
  push:
    branches: [main]
  pull_request:
    branches: [main]

jobs:
  test:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v2

      # customer tests
      - name: Set up Node.js
        uses: actions/setup-node@v2
        with:
          node-version: 14.x

      # Install dependencies
      - name: Install dependencies
        run: cd FullStack-Rental-App/customer  && yarn install

      # Run customer tests
      - name: Run customer tests.
        run: cd FullStack-Rental-App/customer && npm test
